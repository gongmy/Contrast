@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@model Entity.Contrast_UserInfo
<div class="Div_Title">
    组织机构 -> 添加组织机构
</div>
<div>
    @using (Ajax.BeginForm("Add", "Contrast_UserInfo", null, new AjaxOptions() { UpdateTargetId = "alert" }))
    {
        <div>
            <input type="button" value="返回" onclick="window.location.href='@Url.Action("Index", "Contrast_UserInfo")'" class="input_button" />
        </div>
        <br />
        <table class="Tab_info" cellpadding="0" cellspacing="0">
            <tr>
                <td style="width: 120px">
                    姓名：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.Name, new { style = "width:500px" })
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.Name)
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    年龄：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.Age, new { style = "width:100px" })
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.Age)
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    婚姻：
                </td>
                <td>
                   <select name="Privacies">
                    <option value="True">已婚</option>
                    <option  value="False">未婚</option>
                   </select>
                </td>
                <td>
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    法人：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.LegalPerson, new { style = "width:500px" })
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.LegalPerson)
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    公司名称：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.CompanyName, new { style = "width:500px" })
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.CompanyName)
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    需求资金(万)：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.DemandMoney, new { style = "width:100px" }) 万元
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.DemandMoney)
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    需求周期(月)：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.DemandMonth, new { style = "width:100px" }) 月
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.DemandMonth)
                </td>
            </tr>
            <tr>
                <td style="width: 120px">
                    可承受年利息：
                </td>
                <td>
                    @Html.TextBoxFor(a => a.AcceptInterest, new { style = "width:100px" }) %
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.AcceptInterest)
                </td>
            </tr>
        </table>
        
        
        <div>
            <input type="submit" id="sub_button" class="input_button" value="添加" />
            <input type="button" value="返回" onclick="window.location.href='@Url.Action("Index", "Contrast_UserInfo")'" class="input_button" />
        </div>
    }
</div>
